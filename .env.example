# BIWOCO AI Customer Support Assistant - Environment Variables
# Copy this file to .env.local and fill in your actual values

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-generate-with-openssl-rand-base64-32"

# Database Configuration
DATABASE_URL="your-database-url"

# AI Service Configuration
GOOGLE_AI_API_KEY="your-google-ai-api-key"
OPENAI_API_KEY="your-openai-api-key-optional"

# Vector Database (Optional - for enhanced RAG)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-east-1-aws"
PINECONE_INDEX_NAME="chatbot-knowledge"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Application Settings
NEXT_PUBLIC_APP_NAME="BIWOCO AI Assistant"
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_WS_URL="ws://localhost:8000"

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# Analytics (Optional)
POSTHOG_KEY="your-posthog-key-optional"
SENTRY_DSN="your-sentry-dsn-optional"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_VOICE_MESSAGES=true
ENABLE_FILE_UPLOAD=true